<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    tools:context=".RegisterAct">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="1dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="1dp"
        android:orientation="vertical"
        android:padding="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="34dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginLeft="48dp"
                android:src="@drawable/logo" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="24dp"
                android:fontFamily="@font/mreguler"
                android:text="REGISTER"
                android:textColor="@color/colorAccent"
                android:textSize="24sp"/>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/msemibold"
            android:text="Nama"
            android:textColor="@color/colorPrimary" />

        <EditText
            android:id="@+id/edRegName"
            android:layout_width="match_parent"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:textColor="@color/colorAccent"
            android:inputType="text"
            android:layout_height="41dp"
            android:layout_marginTop="4dp"
            android:background="@drawable/dark_bg" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="21dp"
            android:fontFamily="@font/msemibold"
            android:text="E-Mail"
            android:textColor="@color/colorPrimary" />

        <EditText
            android:id="@+id/edRegEmail"
            android:layout_width="match_parent"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:textColor="@color/colorAccent"
            android:inputType="textEmailAddress"
            android:layout_height="41dp"
            android:layout_marginTop="4dp"
            android:background="@drawable/dark_bg" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="21dp"
            android:fontFamily="@font/msemibold"
            android:text="Password"
            android:textColor="@color/colorPrimary" />

        <EditText
            android:id="@+id/edRegPassword"
            android:layout_width="match_parent"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:textColor="@color/colorAccent"
            android:inputType="textPassword"
            android:layout_height="41dp"
            android:layout_marginTop="4dp"
            android:background="@drawable/dark_bg" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="21dp"
            android:fontFamily="@font/msemibold"
            android:text="Confirm Password"
            android:textColor="@color/colorPrimary" />

        <EditText
            android:id="@+id/edRegConfirmPass"
            android:layout_width="match_parent"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:inputType="textPassword"
            android:textColor="@color/colorAccent"
            android:layout_height="41dp"
            android:layout_marginTop="4dp"
            android:background="@drawable/dark_bg" />


    </LinearLayout>

    <Button
        android:id="@+id/btnRegister"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="24dp"
        android:text="REGISTER"
        android:fontFamily="@font/msemibold"
        android:textSize="18sp"
        android:background="@drawable/primary_bg"
        android:textColor="@color/colorPrimary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout" />
</androidx.constraintlayout.widget.ConstraintLayout>